@model DepartmentVM
@{
    ViewBag.Title = "Edit";
}

<style>
    form > div > input {
        padding: 5px !important
    }

    button {
        width: 75% !important;
        height: 45px;
    }
</style>
<div class="container">
    <h2>عدل يارايق ولا يهمك</h2>
    <form asp-controller="Dept" asp-action="Edit" method="post" class="form-group">
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" value="@Model.Name" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Address:</label>
            <input type="text" class="form-control" id="code" placeholder="Enter Address" value="@Model.Address" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>

        <center>
            <button type="submit" value="Save" class="btn btn-primary">Save</button><br /><br />
            <button type="reset" class="btn btn-danger">Reset</button>
        </center>
    </form>
</div>

@section JqueryValidation {
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
