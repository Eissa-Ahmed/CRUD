@model EmployeeVM
<div class="form-group">
    <label asp-for="Name">Name:</label>
    <input type="text" class="form-control" id="name" placeholder="Enter Name" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address">Address:</label>
    <input type="text" class="form-control" id="code" placeholder="Enter Address" asp-for="Address">
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email">Email:</label>
    <input type="text" class="form-control" id="code" placeholder="Enter Email" asp-for="Email">
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary">Salary:</label>
    <input type="text" class="form-control" id="code" placeholder="Enter Salary" asp-for="Salary">
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HirDate">HirDate:</label>
    <input type="date" class="form-control" id="code" placeholder="Enter HirDate" asp-for="HirDate">
    <span asp-validation-for="HirDate" class="text-danger"></span>
</div>
<br />
<label asp-for="DepartmentId">DepartmentId:</label>
<select class="form-control" asp-for="DepartmentId" asp-items="ViewBag.departmentList">
    <option>Choose Department</option>
</select>
<br />
<br />
<br />
<span asp-validation-for="DepartmentId" class="text-danger"></span>
<br />
